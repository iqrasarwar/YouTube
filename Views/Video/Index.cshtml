@section link
{
<link rel="stylesheet" href="~/css/HomeStyles/Responsive.css" />
<link rel="stylesheet" href="~/css/HomeStyles/Home.css" />
<link rel="stylesheet" href="~/css/VideoStyles.css" />
}

<div class="nav_bar">
    <vc:side-bar-section section-string="partial"></vc:side-bar-section>
    <div class="nav_bar_fixed">
        @Html.Partial("Components/SideBarSection/TopBarPartial")
        <hr class="positionBody hr video_hr" />
    </div>
    <div class="positionBody videoBody videoWrapper">
        <div class="video_container">
            <vc:video-section></vc:video-section>
        </div>
        <div class="comments_Container">
        </div>
        <div class="suggestions_container">
            <vc:suggestions-section></vc:suggestions-section>
        </div>
    </div>
</div>

@section Scripts
{
<script>
    $('.MenuIcon').click(function (e) {
        $('.nav_bar').toggleClass('collapsed_expand');
    });
    $('.MenuIcon').click(function (e) {
        $('.hr').toggleClass('hide_hr');
    });
</script>
}
